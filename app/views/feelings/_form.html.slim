= form_for(@feeling) do |f|
  - if @feeling.errors.any?
    #error_explanation
      h2
        = pluralize(@feeling.errors.count, "error")
        |  prohibited this feeling from being saved:
      ul
        - @feeling.errors.full_messages.each do |message|
          li
            = message
  .field
    = f.label :contents
    br
    = f.text_area :contents
  .actions
    = f.submit
